/**app.wxss**/
@import './weui.wxss';

page {
  background-color: #F8F8F8;
  height: 100%; 
  font-size: 32rpx;
  line-height: 1.6;
}
.page__hd {
    padding: 40px;
}
.page__bd {
    padding-bottom: 40px;

}
.page__bd_spacing {
    padding-left: 15px;
    padding-right: 15px;
}

.page__ft{
    padding-bottom: 10px;
    text-align: center;
}

.page__title {
    text-align: left;
    font-size: 20px;
    font-weight: 400;
}

.page__desc {
    margin-top: 5px;
    color: #888888;
    text-align: left;
    font-size: 14px;
}
.page-foot{
  margin: 0 0 20rpx 0;
  text-align: center;
  color: #586C94;
  font-size: 12px;
}
.icon-foot{
  width: 152rpx;
  height: 23rpx;
}
.container {
  display: flex;
  flex-direction: column;
  min-height: 100%;
  justify-content: space-between;
  font-size: 32rpx;
  font-family: -apple-system-font,Helvetica Neue,Helvetica,sans-serif;
}

